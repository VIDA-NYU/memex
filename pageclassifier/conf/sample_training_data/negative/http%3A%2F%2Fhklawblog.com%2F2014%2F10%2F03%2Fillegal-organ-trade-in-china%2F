	<script type="text/javascript">
		WPCOM_sharing_counts = {"http:\/\/hklawblog.com\/2014\/10\/03\/illegal-organ-trade-in-china\/":3249}	</script>
		<script type="text/javascript">
		jQuery(document).on( 'ready post-load', function(){
