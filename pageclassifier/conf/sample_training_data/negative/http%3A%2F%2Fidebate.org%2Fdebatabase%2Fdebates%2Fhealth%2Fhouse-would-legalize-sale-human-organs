	hidden_part = content_height - div_height;
	if(hidden_part < 0)
	{
		$(".abstract_read_more").hide();
	}
	
		
	$(".abstract_read_more").click(function(event){
		event.preventDefault();
		
		if($(this).hasClass("read_more"))
		{
			$(".debate_abstract_text").animate({"max-height": content_height}, speed, function(){
			
